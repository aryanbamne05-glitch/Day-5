<title>Task 3 – Simple Calculator</title>
<style>
  body { font-family: Arial; margin: 20px; }
  input { margin: 5px; padding: 5px; }
  button { margin: 5px; padding: 5px 10px; }
  .error { color: red; font-size: 14px; }
</style>
</head>
<body>

<h2>Task 3 – Simple Calculator</h2>

<input type="number" id="num1" placeholder="Number 1">
<input type="number" id="num2" placeholder="Number 2">
<div id="calcError" class="error"></div>
<p id="result"></p>

<button onclick="calculate('+')">Add</button>
<button onclick="calculate('-')">Subtract</button>
<button onclick="calculate('*')">Multiply</button>
<button onclick="calculate('/')">Divide</button>

<script>
function calculate(op) {
  let n1 = document.getElementById('num1').value;
  let n2 = document.getElementById('num2').value;
  let error = document.getElementById('calcError');
  let result = document.getElementById('result');

  if (n1 === "" || n2 === "") {
    error.textContent = "Please enter both numbers!";
    result.textContent = "";
    return;
  }

  error.textContent = "";
  n1 = parseFloat(n1);
  n2 = parseFloat(n2);

  switch (op) {
    case '+': result.textContent = "Result: " + (n1 + n2); break;
    case '-': result.textContent = "Result: " + (n1 - n2); break;
    case '*': result.textContent = "Result: " + (n1 * n2); break;
    case '/': 
      result.textContent = n2 !== 0 ? "Result: " + (n1 / n2) : "Cannot divide by zero!"; 
      break;
  }
}
</script>

</body>
